<!doctype html>
<head><title>Heyjimbo - <%=title%></title>
<link rel="icon" href="/images/favicon.png" />
<% if (info.image) { %><meta property="og:image" content="https://www.heyjimbo.com<%=info.image%>">
<% } %><style>
  body,html { margin:0px; padding:0px;
  font:14pt Verdana,Arial;
  line-height:1.6;
  background:#222; color:#eee; }
  h1,h2,h3,h4,h5,h6 { font-weight: normal; color:#fe9;}
  #post-content {max-width:750px; margin:auto; }
  #header>h1 { padding-left:50%; margin:0px; font:32px Verdana; letter-spacing:10px; }
  #header>h1>a>span:nth-child(4) { color:#f63; }
  #header a { color:inherit; }
  a { color: #f63; text-decoration:none; }
  code { color: #abf; }
  a:hover {color:white;}
  pre { background:black; overflow-x:auto; border-left:1px solid #f63; padding-left:10px;  }
  #post-content img { max-width:100%; }
  #sidebar { width:300px; background:black; margin-top:20px; float:right; }
  #sidebar a:a1 { display:block; padding: 3px 10px; white-space:nowrap; text-decoration:none; }
  #sidebar h3 { padding:10px; margin:0px; }
  @media (max-device-width:330px) { body { font-size:2em; }
</style></head>
<body>
  <div id=header>
  <h1><a href=/><span>h</span><span>e</span><span>y</span><span>j</span>imbo</a></h1>
</div>
<% if (posts && posts.length) { %>
<div id="sidebar">
    <h3>See Also</h3>
    <a href="/post"><div>All Posts</div></a>
    <hr />
    <h4>Recent Posts</h4>
    <% for (var i=0; i<posts.length; i++) { var f = posts[i]; %>
    <a class=a1 href="/post/<%=f.name%>"><div><%=f.title%></div></a>
    <% } %>
    <hr />
    <% if (tags.length) { %>
      <h4>Tags</h4>
      <% for (var i=0; i<tags.length; i++) { var f = tags[i]; %>
      <a href="/tag/<%=f%>"><%=f%></a>
      <% } %>
    <% } %>
    <hr />
    <a href="/about"><div>About</div></a>
</div>
<% } %>
<div id=post-content>
<%- content %>
</div>
<script async src='https://www.google-analytics.com/analytics.js'></script>
<script async defer src='/ga/pageview.js'></script>
