<!doctype html>
<style>
  body,html { margin:0px; padding:0px; font:16px "Verdana"; line-height:1.4; background:#333; color:#eee; }
  h1,h2,h3,h4,h5,h6 { font-weight: normal; color:#fe9;}
  #post-content {max-width:750px; margin:auto; }
  #header>h1 { padding-left:50%; margin:0px; font:32px Verdana; letter-spacing:10px; }
  #header>h1>a>span:nth-child(4) { color:#f63; }
  #header a { color:inherit; text-decoration:none; }
  a { color: #f63; }
  .tag { font-size:12px; color:#fc6; }
  h4, .tag { display:inline-block; margin:0px 10px;  }
  .blurb { background:#111; margin:2px 15px; padding:3px }
</style>
<div id=header>
  <h1><a href=/><span>h</span><span>e</span><span>y</span><span>j</span>imbo</a></h1>
</div>
<div id=post-content>
<h2>All Posts</h2>
<% for (var i=0; i<content.length; i++) { var f = content[i]; %>
<div>
  <h4><a href="/post/<%=f.filename%>"><%=f.title%></a></h4>
  <% for(var j=0; j<f.tags.length; j++) { %><b class=tag><%=f.tags[j]%></b><% } %>
  <% if (f.blurb) { %>  <div class=blurb><%=f.blurb%></div> <% } %>
</div>
<% } %>

